#!/bin/bash -e

git clone --depth 1 https://github.com/radare/radare2.git
cd radare2/
./configure --prefix=$(dirname $PWD)
make -j $(nproc)
make install
cd ..

cd bin
for i in ???*
do
	mv $i $i.real
	cat <<END > $i
#!/bin/bash
LD_LIBRARY_PATH=\$LD_LIBRARY_PATH:$PWD/../lib $PWD/$i.real "\$@"
END
	chmod 755 $i
done

ctf-tools-pip install -U r2pipe
